<h1>Write a new post</h1>

<%= form_with model: @post do |form| %>
    <% if @post.errors.any? %>
        <ul style="color: red">
            <% @post.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    <% end %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <br>
    <%= form.label :body %>
    <%= form.text_area :body %>
    <br>
    <%= form.submit %>
<% end %>